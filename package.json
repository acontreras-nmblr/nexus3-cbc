{
  "name": "nexus3-cbc",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite --config vite.config.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build --config vite.config.ts",
    "start": "node dist/server/index.js",
    "preview": "vite preview --config vite.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "db:migrate-up": "node --env-file=.env ./node_modules/.bin/node-pg-migrate up --migration-file-language ts --migrations-dir db/migrations",
    "db:migrate-down": "node --env-file=.env ./node_modules/.bin/node-pg-migrate down --migration-file-language ts --migrations-dir db/migrations",
    "db:migrate-new": "node-pg-migrate create --migration-file-language ts --migrations-dir db/migrations"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "knex": "^3.1.0",
    "pg": "^8.13.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "node-pg-migrate": "^7.9.1",
    "postcss": "^8.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.5",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1"
  }
}
